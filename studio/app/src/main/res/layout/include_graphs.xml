<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="nl.sogeti.android.gpstracker.ng.graphs.GraphsViewModel" />
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <nl.sogeti.android.widgets.LineGraph
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@color/cardview_dark_background"
                app:data="@{viewModel.speedAtTimeData}"
                app:xUnit="@{@string/graph_label_time}"
                app:yUnit="@{@string/graph_label_speed}" />

            <nl.sogeti.android.widgets.LineGraph
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@android:color/holo_green_dark"
                app:xUnit="@{@string/graph_label_time}"
                app:yUnit="@{@string/graph_label_altitude}" />

            <nl.sogeti.android.widgets.LineGraph
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@android:color/holo_blue_dark"
                app:xUnit="@{@string/graph_label_distance}"
                app:yUnit="@{@string/graph_label_speed}" />


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</layout>
